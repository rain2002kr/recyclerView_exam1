<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/receiveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="삼성카드"
        app:layout_constraintBottom_toBottomOf="@+id/offCheckBox"
        app:layout_constraintStart_toEndOf="@+id/offCheckBox"
        app:layout_constraintTop_toTopOf="@+id/offCheckBox" />

    <TextView
        android:id="@+id/receiveNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="010-4697-3907"
        app:layout_constraintBottom_toBottomOf="@+id/receiveName"
        app:layout_constraintStart_toEndOf="@+id/receiveName"
        app:layout_constraintTop_toTopOf="@+id/receiveName" />

    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="-->"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/receiveNumber"
        app:layout_constraintStart_toEndOf="@+id/receiveNumber"
        app:layout_constraintTop_toTopOf="@+id/receiveNumber"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/offCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/reminderCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/transferNumber"
        app:layout_constraintStart_toEndOf="@+id/transferNumber"
        app:layout_constraintTop_toTopOf="@+id/transferNumber"
        app:layout_constraintVertical_bias="0.241" />

    <TextView
        android:id="@+id/transferName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="최지선"
        app:layout_constraintBottom_toBottomOf="@+id/symbol"
        app:layout_constraintStart_toEndOf="@+id/symbol"
        app:layout_constraintTop_toTopOf="@+id/symbol" />

    <TextView
        android:id="@+id/transferNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="010-5687-4135"
        app:layout_constraintBottom_toBottomOf="@+id/transferName"
        app:layout_constraintStart_toEndOf="@+id/transferName"
        app:layout_constraintTop_toTopOf="@+id/transferName"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>